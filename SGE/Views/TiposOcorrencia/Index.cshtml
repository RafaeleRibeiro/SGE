@model IEnumerable<SGE.Models.TipoOcorrencia>

@{
	ViewData["Title"] = "Index";
}

<h1>TIPOS DE OCORRÊNCIA</h1>

<p>
	<a asp-action="Create" class="btn btn-lg btn-outline-dark d-inline-flex align-items-center">
		<svg class="me-3" bootstrap-icon="PlusLg" width="20" height="20" aria-label="Adicionar"></svg>Adicionar

	</a>
</p>
<div class="row gap-3 justify-content-center">
	@foreach (var item in Model)
	{
		{
			<div class="d-flex flex-column justify-content-center align-items-center col-12 col-md-3 text-center">
				<div style="background:#fff; width:200px;height:150px;" class="d-flex justify-content-center align-items-center border border-1 rounded-4 text-center ">
					@Html.DisplayFor(modelItem => item.TipoOcorrenciaNome)
				</div>
				<div>
					<a class="text-decoration-none text-dark" asp-action="Edit" asp-route-id="@item.TipoOcorrenciaId">
						<svg class="me-2" bootstrap-icon="PencilFill" width="16" height="16" arial-label="Editar"></svg>
					</a>
					<a class="text-decoration-none text-dark" asp-action="Details" asp-route-id="@item.TipoOcorrenciaId">
						<svg class="me-2" bootstrap-icon="InfoLg" width="16" height="16" arial-label="Detalhes"></svg>
					</a>
					<a class="text-decoration-none text-dark" asp-action="Delete" asp-route-id="@item.TipoOcorrenciaId">
						<svg class="me-2" bootstrap-icon="Trash" width="16" height="16" arial-label="Excluir"></svg>
					</a>
				</div>
			</div>

		}
	}
</div>
