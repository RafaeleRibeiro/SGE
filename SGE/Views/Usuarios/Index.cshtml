@model IEnumerable<SGE.Models.Usuario>

@{
	ViewData["Title"] = "Index";
}

<h1>USUÁRIOS</h1>

<p>
	<a asp-action="Create" class="btn btn-lg btn-outline-dark d-inline-flex align-items-center">
		<svg class="me-3" bootstrap-icon="PlusLg" width="20" height="20" aria-label="Adicionar"></svg>Adicionar

	</a>
</p>
<table class="table table-bordered table-light table-striped table-hover barraTopo text-light" style="">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.UsuarioNome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Senha)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Celular)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CadAtivo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DataCadastro)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CadInativo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TipoUsuario)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.UsuarioNome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Senha)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Celular)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CadAtivo)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DataCadastro)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CadInativo)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TipoUsuario.TipoUsuarioId)
				</td>
				<td>
					<a class="text-decoration-none text-dark" asp-action="Edit" asp-route-id="@item.UsuarioId">
						<svg class="me-2" bootstrap-icon="PencilFill" width="16" height="16" arial-label="Editar"></svg>
					</a>
					<a class="text-decoration-none text-dark" asp-action="Details" asp-route-id="@item.UsuarioId">
						<svg class="me-2" bootstrap-icon="InfoLg" width="16" height="16" arial-label="Detalhes"></svg>
					</a>
					<a class="text-decoration-none text-dark" asp-action="Delete" asp-route-id="@item.UsuarioId">
						<svg class="me-2" bootstrap-icon="Trash" width="16" height="16" arial-label="Excluir"></svg>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
