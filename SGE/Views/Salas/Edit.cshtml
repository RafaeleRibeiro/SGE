@model SGE.Models.Sala

@{
    ViewData["Title"] = "Edit";
}

<h1>EDITAR</h1>

<h4>Salas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalaId" />
            <div class="form-group">
                <label asp-for="SalaNome" class="control-label"></label>
                <input asp-for="SalaNome" class="form-control" />
                <span asp-validation-for="SalaNome" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CadAtivo" /> @Html.DisplayNameFor(model => model.CadAtivo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CadInativo" class="control-label"></label>
                <input asp-for="CadInativo" class="form-control" />
                <span asp-validation-for="CadInativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        <input type="submit" value="VOLTAR" class="btn btn-success" />
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
